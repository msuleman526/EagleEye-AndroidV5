<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Full Screen Camera Feed Container -->
    <FrameLayout
        android:id="@+id/cameraFeedContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Left Side Controls Container -->
    <LinearLayout
        android:id="@+id/leftControlsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Take Off / Land Button -->
        <Button
            android:id="@+id/btnTakeOffLand"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="TAKE OFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@color/background_blue"
            android:elevation="8dp" />

    </LinearLayout>

    <!-- Right Side Controls Container -->
    <LinearLayout
        android:id="@+id/rightControlsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/background_blue"
        android:elevation="8dp">

        <!-- Camera Mode Label -->
        <TextView
            android:id="@+id/tvCameraMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHOTO"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- Photo / Video Mode Switch -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchCameraMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:theme="@color/background_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" />

        </LinearLayout>

        <!-- Capture Button (Photo / Start Recording) -->
        <ImageButton
            android:id="@+id/btnCapture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@color/background_blue"
            android:scaleType="centerInside"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Capture Photo or Start Recording" />

        <!-- Recording Timer -->
        <TextView
            android:id="@+id/tvRecordingTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Stop Recording Button -->
        <ImageButton
            android:id="@+id/btnStopRecording"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_media_pause"
            android:background="@color/background_blue"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:visibility="gone"
            android:contentDescription="Stop Recording" />

    </LinearLayout>

</RelativeLayout>