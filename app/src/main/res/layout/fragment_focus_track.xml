<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/secondary_gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Subject Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/subjectTypeToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/btnPerson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Person"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/btnVehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vehicle"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"/>

        </RadioGroup>

        <!-- Tracking Circles Diagram -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/big_drone_green"
                android:contentDescription="Tracking Circles"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outer circle"
                android:textColor="@color/uxsdk_yellow"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aircraft tracks subject from a distance. Set tracking distance and height below"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inner circle"
                android:textColor="@color/uxsdk_yellow"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aircraft tracks subject closely. Set tracking distance and height below"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>

        </LinearLayout>

        <!-- Inner Radius & Outer Radius (Dual Slider) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inner Radius"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/innerRadiusValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 m"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outer Radius"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/outerRadiusValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 m"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <SeekBar
            android:id="@+id/radiusRangeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aircraft's horizontal distances to tracked subject in inner and outer circles. When zoom is enabled, actual distance may be larger than set value to make sure subject remains fully in frame"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="24dp"/>

        <!-- Inner Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Inner Height"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/innerHeightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.0 m"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aircraft's height above tracked subject in inner circle"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <SeekBar
                android:id="@+id/innerHeightSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="20"/>

        </LinearLayout>

        <!-- Outer Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Outer Height"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/outerHeightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0 m"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aircraft's height above tracked subject in outer circle"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <SeekBar
                android:id="@+id/outerHeightSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"/>

        </LinearLayout>

        <!-- Camera Motion -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera Motion"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aircraft moves gently to achieve smooth camera movements (available in Manual and Auto modes)"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/cameraMotionToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/btnNormal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Normal"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/btnFast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fast"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"/>

        </RadioGroup>

        <!-- Near-Ground Flight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Near-Ground Flight"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When enabled, aircraft can descend below 2.0 m during follow process to achieve a better composition"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/nearGroundFlightSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <!-- Reset Button -->
        <TextView
            android:id="@+id/resetFocusTrackBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset FocusTrack Settings"
            android:textColor="@color/uxsdk_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>

</ScrollView>
