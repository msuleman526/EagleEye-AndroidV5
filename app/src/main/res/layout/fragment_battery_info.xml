<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/secondary_gradient_background">

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Battery Cell Status Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery Cell Status"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Battery Cells Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Cell 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/batteryCell1Icon"
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:src="@drawable/battery_big_1"
                        android:contentDescription="Battery Cell 1"/>

                    <TextView
                        android:id="@+id/batteryCell1Voltage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.93 V"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <!-- Cell 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/batteryCell2Icon"
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:src="@drawable/battery_big_1"
                        android:contentDescription="Battery Cell 2"/>

                    <TextView
                        android:id="@+id/batteryCell2Voltage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.92 V"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Battery Voltage and Temperature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/batteryVoltage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.86 V"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery Voltage"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/batteryTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36.7 Â°C"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery Temperature"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textfield_border"
                android:layout_marginVertical="8dp"/>

            <!-- Battery SN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Battery SN"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/batterySerialNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5LRPM8MCA4021Z"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textfield_border"/>

            <!-- Battery Cycle Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Battery Cycle Count"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/batteryCycleCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
