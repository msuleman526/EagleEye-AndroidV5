<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/telemetryContainer"
    android:layout_width="wrap_content"
    android:background="@color/transparent"
    android:layout_height="38dp"
    android:orientation="horizontal">

    <!-- Battery Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/batteryIcon"
            android:layout_width="11dp"
             app:tint="@color/text_primary"
            android:layout_height="20dp"
            android:src="@drawable/bettery_empty" />

        <TextView
            android:id="@+id/batteryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/text_primary"
            android:text="N/A" />

    </LinearLayout>

    <!-- GPS/Satellite Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/satelliteIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
             app:tint="@color/text_primary"
            android:src="@drawable/settlite_0" />

        <TextView
            android:id="@+id/satelliteCountText"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="-2dp"
            android:gravity="top"
            android:textColor="@color/text_primary"
            android:text="0" />

        <ImageView
            android:id="@+id/gpsSignalIcon"
            android:layout_width="25dp"
             app:tint="@color/text_primary"
            android:layout_height="20dp"
            android:layout_marginLeft="-7dp"
            android:src="@drawable/signal_0" />

    </LinearLayout>

    <!-- Remote Controller Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/remoteIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
             app:tint="@color/text_primary"
            android:src="@drawable/remote_0" />

        <TextView
            android:id="@+id/remoteSignalText"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="-2dp"
            android:gravity="top"
            android:textColor="@color/text_primary"
            android:text="0" />

        <ImageView
            android:id="@+id/remoteSignalIcon"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-7dp"
             app:tint="@color/text_primary"
            android:src="@drawable/signal_0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/droneIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/drone"
            app:tint="@color/text_primary" />

        <TextView
            android:id="@+id/flightModeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/text_primary"
            android:text="N/A"/>

    </LinearLayout>

</LinearLayout>