<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secondary_gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Obstacle Avoidance Action -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obstacle Avoidance Action"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/obstacleAvoidanceToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <RadioButton
                android:id="@+id/btnBypass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bypass"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"/>

            <RadioButton
                android:id="@+id/btnBrake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Brake"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/btnOff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Off"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When enabled and controlling aircraft via control sticks, aircraft automatically hovers when obstacles are detected"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <!-- Display Radar Map -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Display Radar Map"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/radarMapSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When enabled, real-time obstacle detection radar map will be displayed"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textfield_border"
            android:layout_marginVertical="8dp"/>

        <!-- RTH Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return to Home (RTH)"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- Advanced RTH -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced RTH"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/advancedRthToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <RadioButton
                android:id="@+id/btnPreset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Preset"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/btnOptimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Optimal"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aircraft will automatically fly an optimal RTH route in adequate lighting conditions or ascend to a preset altitude and return to the home point in low light"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <!-- Auto RTH Altitude -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auto RTH Altitude"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/rthAltitudeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 m"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <SeekBar
            android:id="@+id/rthAltitudeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="480"
            android:progress="80"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When returning to home, the aircraft will rise to a preset altitude before returning"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <!-- AR Settings (clickable) -->
        <LinearLayout
            android:id="@+id/arSettingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AR Settings"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                android:rotation="270"
                android:tint="@color/text_secondary"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textfield_border"
            android:layout_marginVertical="8dp"/>

        <!-- Flight Protection Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight Protection"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- Max Altitude -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Max Altitude"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/maxAltitudeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 m"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <SeekBar
            android:id="@+id/maxAltitudeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="480"
            android:progress="100"
            android:layout_marginBottom="16dp"/>

        <!-- Max Distance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Max Distance"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/maxDistanceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Limit"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <SeekBar
            android:id="@+id/maxDistanceSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="7980"
            android:progress="7980"
            android:layout_marginBottom="16dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textfield_border"
            android:layout_marginVertical="8dp"/>

        <!-- Sensors Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensors"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- Compass -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compass"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/compassStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="normal"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/compassCalibrateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calibrate"
                android:textSize="14sp"
                style="@style/Widget.AppCompat.Button.Borderless"/>

        </LinearLayout>

        <!-- IMU -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMU"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/imuStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="normal"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/imuCalibrateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calibrate"
                android:textSize="14sp"
                style="@style/Widget.AppCompat.Button.Borderless"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textfield_border"
            android:layout_marginVertical="8dp"/>

        <!-- Power & Battery Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power &amp; Battery"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- Battery Info (clickable) -->
        <LinearLayout
            android:id="@+id/batteryInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Battery Info"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                android:rotation="270"
                android:tint="@color/text_secondary"/>

        </LinearLayout>

        <!-- Auxiliary LED -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auxiliary LED"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/auxiliaryLedToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/btnLedAuto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auto"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/btnLedOn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="On"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"/>

            <RadioButton
                android:id="@+id/btnLedOff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Off"
                android:button="@null"
                android:background="@drawable/selector_segmented_button"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_primary"/>

        </RadioGroup>

        <!-- Advanced Safety Settings (clickable) -->
        <LinearLayout
            android:id="@+id/advancedSafetyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Advanced Safety Settings"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:rotation="270"
                    android:tint="@color/text_secondary"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set safety-related functions, including setting the aircraft behavior when disconnected and the emergency propeller stop"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
